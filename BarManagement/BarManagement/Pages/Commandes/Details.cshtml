@page
@model BarManagement.Pages.Commandes.DetailsModel
@{
    ViewData["Title"] = "Facture";
}

<div class="container m-5">
    <div class="row">
        <h3 class="text-danger p-0">Facture</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                Numéro de commande
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Commande.Id)
            </dd>
            <dt class="col-sm-3">
                Numéro de table
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Commande.Table.Numero)
            </dd>
            <dt class="col-sm-3">
                Date Création
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Commande.DateCreation)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Commande.Etat)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Commande.Etat)
            </dd>
        </dl>
        <div>
            <h6 class="text-danger fw-bold">Détails</h6>
            <hr />
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            Produit
                        </th>
                        <th>
                            Prix
                        </th>
                        <th>
                            Quantité
                        </th>
                    </tr>
                <tbody>
                        @foreach (var item in Model.Commande.ProduitsCommandes)
                        {
                        <tr>
                            <td>
                                    @Html.DisplayFor(modelItem => item.Produit.Designation)
                            </td>
                            <td>
                                    @Html.DisplayFor(modelItem => item.Produit.Prix) $
                            </td>
                            <td>
                                    @Html.DisplayFor(modelItem => item.Quantite)
                            </td>
                        </tr>
                        }
                </tbody>
            </table>
            <div>
                <span class="text-success fw-bold">Total = @Model.Commande.Montant $</span>
            </div>
        </div>
    </div>
</div>