@page
@model BarManagement.Pages.Tables.IndexModel

@{
    Layout = "Shared/_Layout";
    ViewData["Title"] = "Gérer les tables";
}

<div class="container m-5">
    <div class="row">
        <h3 class="text-danger p-0">Gérer les tables</h3>
        <hr />
        <a class="btn btn-dark btn-sm col-2 mb-2" asp-page="Create">Nouvelle table</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Numéro de table
                    </th>
                    <th>
                        Capacité
                    </th>
                    <th>
                        Etat de table
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Table)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Numero)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Capacite)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Etat)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id">Modifier</a> |
                            <a asp-page="./Delete" asp-route-id="@item.Id">Supprimer</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>