@page
@model LoginModel

@{
    ViewData["Title"] = "Connexion";
}


<div class="container justify-content-center">
    <div class="row">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <h3 class="p-0 text-danger">@ViewData["Title"]</h3>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mt-1">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mt-1">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label class="form-label">Mot de passe</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                Se souvenir de moi
                            </label>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="btn btn-sm btn btn-primary mb-1">Se connecter</button>
                    </div>
                    <div>
                        <p>
                            <a id="forgot-password" class="mt-1" asp-page="./ForgotPassword">Mot de passe oublié ?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">S'enregistrer</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
